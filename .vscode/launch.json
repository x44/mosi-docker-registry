{
	"version": "0.2.0",
	"configurations": [
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// Runs the dev mode executable 'program'
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		{
			"name": "Program",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/program",
			"cwd": "_dev",
			"args": [
				"-dev",
			]
		},
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// The following run the dev mode executable 'service' which operates on the dev mode executable 'program'
		// First run the "Program" configuration to have a running program executable.
		// Then run one of the "Service ..." configurations to apply service commands to the program executable.
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		{
			"name": "Service Start",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/service",
			"cwd": "_dev",
			"args": [
				"-dev",
				"stop",
				"uninstall",
				"install",
				"start",
			]
		},
		{
			"name": "Service Stop",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/service",
			"cwd": "_dev",
			"args": [
				"-dev",
				"stop",
				"uninstall",
			]
		},
		{
			"name": "Service Status",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/service",
			"cwd": "_dev",
			"args": [
				"-dev",
				"status",
			]
		},
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// The following run the dev mode executable 'command' and display the program or command help
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		{
			"name": "Help",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/command",
			"cwd": "_dev",
			"args": [
				"-dev",
				"-h"
			]
		},
		{
			"name": "Help for Command",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/command",
			"cwd": "_dev",
			"args": [
				"-dev",
				"-h",
				"ls"
			]
		},
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// The following run the dev mode executable 'command' and apply a program-command
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		{
			"name": "Command 'version'",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/command",
			"cwd": "_dev",
			"args": [
				"-dev",
				"version"
			]
		},
		{
			"name": "Command 'ls'",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/command",
			"cwd": "_dev",
			"console": "integratedTerminal",
			"args": [
				"-dev",
				"ls",
				// "vertx*",
				"-s=mosi:4444", "-u=admin", "-p=admin"
			]
		},
		{
			"name": "Command 'rm'",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/mosi/.",
			"output": "_dev/command",
			"cwd": "_dev",
			"console": "integratedTerminal",
			"args": [
				"-dev",
				"rm",
				"vertx*:2.*",
				"-dry",
				"-s=mosi:4444", "-u=admin", "-p=admin"
			]
		},
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// Run tool: configure-docker-toolbox
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		{
			"name": "Configure Docker Toolbox",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/configure-docker-toolbox/.",
			"cwd": ".",
			"console": "integratedTerminal",
			"args": [
				// "-hosts", "192.168.0.2 mosi",
				// "-certs", "_dev/certs/mosi.crt",
			]
		},
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// Run tool: generate-server-certificate
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		{
			"name": "Generate Server Certificate",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/generate-server-certificate/.",
			"cwd": ".",
			"console": "integratedTerminal",
			"args": [
				"name", "mosi",
				"dir", "_dev/certs",
				"hosts", "mosi",
				"ips", "192.168.0.2",
			]
		},
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// Tests
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////
		{
			"name": "Test Current File",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"program": "${workspaceFolder}/${relativeFileDirname}",
			"cwd": ".",
			"args": [
			]
		},
	]
}